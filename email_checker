import csv

with open('domains.txt', 'r') as f:
    allowed_domains = set(f.read().splitlines())

spam_emails = 0
random=0

with open('emails.csv', 'r') as file:
    reader = csv.reader(file)
    next(reader)  
    for row in reader:
        email = row[0]
        domain = email.split('@')[-1]  # Extracting domain

        if domain in allowed_domains:
            #print(f"{email} is not a spam email.")
            random+=2
        else:
            print(f"{email} is a spam email.")
            spam_emails += 1

print("Spam emails found", spam_emails)
